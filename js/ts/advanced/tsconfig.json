{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2020",
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noEmit": false,
    "outDir": "build",
    "rootDir": "."
  },
  "exclude": ["node_modules", "build"]
}
